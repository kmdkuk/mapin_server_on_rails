<br>会社情報<br>
<table>
  <tr>
    <th>id</th>
    <th>名前</th>
  </tr>

  <tr>
    <td><%= @company.id %></td>
    <td><%= @company.name %></td>
  </tr>
</table>
<br><br>
<%= @company.name %>のショップ一覧
<table>
  <tr>
    <th>id</th>
    <th>名前</th>
    <th>郵便番号</th>
    <th>住所</th>
    <th>電話番号</th>
  </tr>
  <% unless @shops.nil? %>
    <% @shops.each do |shop|%>
      <tr>
        <td><%= shop.id %></td>
        <td><%= shop.name%></td>
        <td><%= shop.postal_code%></td>
        <td><%= shop.address%></td>
        <td><%= shop.tel%></td>
      </tr>
    <% end %>
  <% end %>
</table>
